# Production Environment Variables for Railway
# Copy these to Railway environment variables

# Database Configuration (Railway PostgreSQL)
POSTGRES_DB=railway
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_HOST=containers-us-west-xxx.railway.app
POSTGRES_PORT=5432

# Django Configuration
DJANGO_SETTINGS_MODULE=config.settings_production
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Email Configuration (for password reset)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Custom Domain (optional)
CUSTOM_DOMAIN=your-domain.com
